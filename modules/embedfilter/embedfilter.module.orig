function embedfilter_get_whitelist() {
  static $whitelist;
  if (empty($whitelist)) {
    $var = variable_get('embedfilter_host_whitelist', '');
    $whitelist = array_filter(split("[\n|\r]", $var), 'trim');
  }
  return $whitelist;
}

